<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>com.example.ma_cnss_spring_mvc.entities.AdminEntity</class>
        <class>com.example.ma_cnss_spring_mvc.entities.AgentEntity</class>
        <class>com.example.ma_cnss_spring_mvc.entities.AnalysisEntity</class>
        <class>com.example.ma_cnss_spring_mvc.entities.DossierEntity</class>
        <class>com.example.ma_cnss_spring_mvc.entities.MedicationEntity</class>
        <class>com.example.ma_cnss_spring_mvc.entities.PatientEntity</class>
        <class>com.example.ma_cnss_spring_mvc.entities.RadioEntity</class>
        <class>com.example.ma_cnss_spring_mvc.entities.SpecialityEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/ma-cnss-spring"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
